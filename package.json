{
  "name": "mcp-swissknife",
  "version": "1.1.0",
  "type": "module",
  "main": "index.js",
  "bin": {
    "mcp-swissknife": "dist/index.js"
  },
  "scripts": {
    "build": "vite build",
    "build:tsc": "tsc",
    "start": "node dist/index.js",
    "dev": "vite-node src/index.ts",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format --write src/",
    "format:check": "biome format src/",
    "check": "biome check --write src/",
    "check:ci": "biome check src/",
    "typecheck": "tsc --noEmit",
    "quality": "npm run typecheck && npm run check:ci",
    "quality:fix": "npm run typecheck && npm run check",
    "prepare": "husky"
  },
  "author": "atman-33",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atman-33/mcp-swissknife.git"
  },
  "bugs": {
    "url": "https://github.com/atman-33/mcp-swissknife/issues"
  },
  "homepage": "https://github.com/atman-33/mcp-swissknife#readme",
  "description": "A multi-purpose Model Context Protocol server providing utility tools for AI assistants",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "swissknife",
    "tools",
    "utilities",
    "datetime",
    "obsidian",
    "software-documentation",
    "web-fetch",
    "ai-assistant",
    "cli"
  ],
  "files": [
    "dist",
    "README.md",
    "package.json",
    "LICENSE"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.3.0",
    "@types/turndown": "^5.0.5",
    "husky": "^9.1.7",
    "shx": "^0.4.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vite-node": "^3.2.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "axios": "^1.7.9",
    "chromium-bidi": "^8.0.0",
    "commander": "^14.0.0",
    "glob": "^11.0.3",
    "jsdom": "^25.0.1",
    "node-html-markdown": "^1.3.0",
    "playwright": "^1.49.1",
    "turndown": "^7.2.1",
    "zod-to-json-schema": "^3.24.6"
  }
}
